<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div>
        <div>
          <h1>
            Doctor #<%= @the_doctor.id %> details
          </h1>

          <div>
            <div>
              <a href="/doctors">
                Go back
              </a>
            </div>

            <div>
              <a href="/delete_doctor/<%= @the_doctor.id %>">
                Delete doctor
              </a>
            </div>
          </div>

          <dl>
            <dt>
              First name
            </dt>
            <dd>
              <%= @the_doctor.first_name %>
            </dd>

            <dt>
              Last name
            </dt>
            <dd>
              <%= @the_doctor.last_name %>
            </dd>

            <dt>
              Visits count
            </dt>
            <dd>
              <%= @the_doctor.visits.size %>
            </dd>

            <dt>
              Created at
            </dt>
            <dd>
              <%= time_ago_in_words(@the_doctor.created_at) %> ago
            </dd>

            <dt>
              Updated at
            </dt>
            <dd>
              <%= time_ago_in_words(@the_doctor.updated_at) %> ago
            </dd>
          </dl>
        </div>
      </div>

      <hr>

      <div>
        <div>
          <h2>
            Edit doctor
          </h2>

          <form action="/modify_doctor/<%= @the_doctor.id %>"  method="post" >
            <div class="form-group mb-2">
              <label for="first_name_box">
                First name
              </label>

              <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_doctor.first_name %>">
            </div>

            <div class="form-group mb-2">
              <label for="last_name_box">
                Last name
              </label>

              <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_doctor.last_name %>">
            </div>

            <button class="btn btn-primary">
              Update doctor
            </button>
          </form>
        </div>
      </div>

      <hr>

    </div>
  </body>
</html>
